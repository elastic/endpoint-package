{
    "source": {
        "index": "metrics-endpoint.metadata-*",
        "query": {
            "range": {
                "@timestamp": {
                    "gt": "now-90d/d"
                }
            }
        }
    },
    "dest": {
        "index": "metrics-endpoint.metadata_current_default"
    },
    "latest": {
        "unique_key": ["agent.id"],
        "sort": "@timestamp"
    },
    "description": "collapse and update the latest document for each host",
    "frequency": "1m",
    "sync": {
        "time": {
            "field": "event.ingested",
            "delay": "60s"
        }
    }
}