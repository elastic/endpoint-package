{
  "_meta": {
    "documentation": "https://www.elastic.co/guide/en/ecs/current/ecs-orchestrator.html",
    "ecs_version": "8.2.0"
  },
  "template": {
    "mappings": {
      "properties": {
        "orchestrator": {
          "properties": {
            "cluster": {
              "properties": {
                "name": {
                  "ignore_above": 1024,
                  "type": "keyword"
                }
              }
            },
            "namespace": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "resource": {
              "properties": {
                "name": {
                  "ignore_above": 1024,
                  "type": "keyword"
                },
                "type": {
                  "ignore_above": 1024,
                  "type": "keyword"
                }
              }
            }
          }
        }
      }
    }
  }
}
